<table class="grade-table">
  <thead>
    <tr>
      <th>Student</th>
      <% let numHomeworks = 10 %>
      <% let numProjects = 2 %>
      <% for (let i = 1; i <= numHomeworks; i++) { %>
        <th>HW <%= i %></th>
      <% } %>
      <% for (let i = 1; i <= numProjects; i++) { %>
        <th>Proj <%= i %></th>
      <% } %>
    </tr>
  </thead>
  <tbody>
    <form action="/students/grade" method="POST">
      
      <% students.forEach((student) => { %>
        <tr>
          <td><%= student.name %></td>
          <% for (let i = 0; i < numHomeworks; i++) { %>
            <td>
              <input type="number" name="grades[<%= student._id %>][homework][<%= i %>]" value="<%= student.homework[i] || '' %>">
            </td>
          <% } %>
          <% for (let i = 0; i < numProjects; i++) { %>
            <td>
              <input type="number" name="grades[<%= student._id %>][project][<%= i %>]" value="<%= student.project[i] || '' %>">
            </td>
          <% } %>
        </tr>
      <% }); %>
      <tr>
        <td colspan="<%= numHomeworks + numProjects + 1 %>">
          <button id="submit" type="submit">ADD GRADES</button>
        </td>
      </tr>
    </form>
  </tbody>
</table>