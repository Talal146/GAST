<h2>Instructor Details</h2>
<table id="list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone-Number</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach( User => { %>
      <tr>
      <td><%= User.name %></td>
      <td><%= User.email %></td>
      <td><%= User.phone %></td>
      <td><%= User.details ? 'Yes' : 'No' %></td>
      <% }); %>

  </tbody>
</table>

