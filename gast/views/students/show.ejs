<h2>Student Report</h2>
<table id="list">
  <thead>
    <tr>
      <th>Name<br><a href="/students">Details</a></br></th>
      <th>Grade (%)<br><a href="/students/grade">Details</a></br></th>
      <th>Attendance (%)<br><a href="">Details</a></br></th>
    </tr>
  </thead>
  <tbody>
    <% students.forEach( Student => { %>
      <tr>
      <td><%= Student.name %></td>
      <td><%= Student.email %></td>
      <td><%= Student.phone %></td>
      <td><%= Student.details ? 'Yes' : 'No' %></td>
      <td><a href="/students/<%= Student._id %>">Information</a></td>
      <td><%= Student.grade %></td>
      <td><%= Student.attendance %></td>
      </tr>
      <% }); %>

  </tbody>
</table>



