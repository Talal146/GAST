
<%- include('../partials/header') %>
<h2>homeworks</h2>

<table id="list">
	<thead>
		<tr>
			<th>Student name</th>
			<th>homework name</th>
			<th>deliverTime</th>
			<th>gradeWaight</th>
			<th>description</th>
			<th>Total</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= student.name %></td>
		</tr>
		<% homeworks.forEach((homework) => { %>
		<tr>
			<td><%= homework.name %></td>
			<td><%= homework.deliverTime %></td>
			<td><%= homework.gradeWaight %></td>
			<td><%= homework.description %></td>
			<td><% }); %></td>

			<td><%= homeworks.total %></td>
		</tr>
	</tbody>
</table>
<a href="/homeworks/new"><button id="ADD" type="submit">ADD GRADE</button></a>

<%- include('../partials/footer') %>

